#!/usr/bin/env bash
indent() {
    sed -u 's/^/      /'
}

BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"
STAGE="$(mktemp -d)"
STAGE2="$(mktemp -d)"

if [ ! -f "${ENV_DIR}/APP_BASE" ]; then
    echo "APP_BASE was not set. Aborting" | indent
    exit 1
fi
APP_BASE="$(cat "${ENV_DIR}/APP_BASE")"
APP_BASE2="$(cat "${ENV_DIR}/APP_BASE2")"

(
    mv "${BUILD_DIR}/${APP_BASE}" "${STAGE}" &&
    mv "${STAGE}/$(basename "$APP_BASE")" "${BUILD_DIR}"
)

if [ $? -ne 0 ]; then
    echo "FAILED to copy directory into place" | indent
    exit 1
fi

echo "Copied ${APP_BASE} to root of app successfully" | indent

(
    mv "${BUILD_DIR}/${APP_BASE2}" "${STAGE2}" &&
    rm -rf "${BUILD_DIR}" &&
    mv "${STAGE}/$(basename "$APP_BASE2")" "${BUILD_DIR}"
)

if [ $? -ne 0 ]; then
    echo "FAILED to copy directory into place" | indent
    exit 1
fi

echo "Copied ${APP_BASE2} to root of app successfully" | indent
